{
    "name": "CAST Spell Checker",
    "version": "1.0.0",
    "description": "Spell checker for children",
    "manifest_version": 3,
    "author": "CAST team",
    "icons": {
        "128": "icon128.png",
        "48": "icon48.png",
        "32": "icon32.png",
        "16": "icon16.png"
    }
,

"page_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html",
    "default_title": "CASTSpellChecker"
  },

"background": {
    "scripts": ["bower_components/jquery-3.6.4.min/index.js","typo/typo.js","eventPage.js"]
},

"content_scripts":[
    {
      "matches": ["<all_urls>"],
      "js": ["bower_components/jquery-3.6.4.min/index.js", "content.js"],
      "css": ["content.css"]
    }
],

"permissions": [
    "tabs",
    "contextMenus",
    "tts",
    "storage"
  ],

  "web_accessible_resources": [
    "speakIcon.png"
  ]
}